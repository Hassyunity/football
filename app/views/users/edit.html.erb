<!-- app/views/users/edit.html.erb -->
<h1>Modifier votre profil</h1>

<%= form_for @user do |f| %>
  <%= f.label :nom %>
  <%= f.text_field :nom %>

  <%= f.label :email %>
  <%= f.email_field :email %>

  <!-- Ajoutez d'autres champs de formulaire selon vos besoins -->

  <%= f.submit 'Enregistrer les modifications' %>
<% end %>

<%= link_to 'Annuler', @user, class: 'Annuler' %>
